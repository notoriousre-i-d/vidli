<h2>Login</h2>

<% form_for @user_session, :url => {:action => "create"} do |f| -%>
  <% if @user_session.errors.any? -%>
    <div id="error_explanation">
      <ul>
      <% @user_session.errors.full_messages.each do |msg| -%>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :login %>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <div class="field">
    <%= f.submit "Login" %>
  </div>
<% end -%>  