<h2>Cart</h2>
<% if @cart.empty? -%>
<h3>Your cart is empty</h3>
<% else -%>
<ul>
  <% @cart.cart_items.each do |i| -%>
  <li><%= link_to i.video.title, show_video_path(i.video) %> - via <%= i.delivery %> - $<%= cart_item_price(i, i.delivery) %> <%= link_to 'Remove', remove_cart_item_path(i) %></li>
  <% end -%>
</ul>
<% end -%>