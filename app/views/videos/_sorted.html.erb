<style>
.videos .video {
  width: 190px;
  margin: 0 6px 25px 0;
  overflow: hidden;
  float: left;
}

.videos .video .title {
  margin: 4px 0 0 0;
  color: #018eef;
  font-size: 0.8em;
  font-weight: bold;
}

.videos .video .thumbnail {
  position: relative;
  width: 188px;
  height: 110px;
  overflow: hidden;
  text-align: center;
  border: 1px solid #72D8FA;
}

.videos .row {
  clear: both;
}
</style>
<div class="videos clearfix">
  <% videos.each_with_index do |v, idx| %>
    <% if idx != 0 && idx % 5 == 0 -%>
    <div class="row"></div>
    <% end -%>

    <div class="video">
      <div class="thumbnail">
        <%= link_to image_tag(v.screenshot.url(:thumb)), show_video_path(v) if v.screenshot.exists? %>
        <%= link_to image_tag('themes/vidli/videos/screenshot-missing.png'), show_video_path(v) if !v.screenshot.exists? %>
      </div>
      <%= link_to v.title, show_video_path(v), :class => 'title' %>
    </div>
  <% end -%>
</div>
<%= paginate videos %>
