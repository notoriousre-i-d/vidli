<!DOCTYPE html>
<html>
<head>
  <title>Vidli</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

<p>
  <%= link_to 'Home', root_path %> | <%= link_to 'Cart', cart_path %><% if permitted_to? :index, :admin_videos %> | <%= link_to 'Admin', admin_videos_path %><% end %>
  <% if current_user -%>
  | Signed in as <%= link_to current_user.email, account_url %> | <%= link_to 'Logout', logout_path %>
  <% else -%>
  | <%= link_to 'Login', login_path %>
  | <%= link_to 'Register', register_path %>
  <% end %>
</p>

<div class="messages">
  <% if flash[:error]%><p class="error"><%= flash[:error] %></p><% end -%>
  <% if flash[:notice]%><p class="notice"><%= flash[:notice] %></p><% end -%>
</div>
<%= yield %>

</body>
</html>
